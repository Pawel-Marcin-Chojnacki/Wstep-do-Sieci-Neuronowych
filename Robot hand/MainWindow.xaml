<Window x:Class="Robot_hand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Robot_hand"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Window.DataContext>
        <local:ViewModel></local:ViewModel>
    </Window.DataContext>
    <Grid>
        <Border BorderBrush="Navy"  BorderThickness="2"
                Height="{Binding BorderHeight}"
                Width="{Binding BorderWidth}">
            <Canvas MouseMove="Canvas_MouseMove" Background="Aqua">
                <Line StrokeThickness="5" Stroke="CadetBlue"
                      X1="{Binding Shoulder.X}"
                      X2="{Binding Elbow.X, Mode=TwoWay}"
                      Y1="{Binding Shoulder.Y}"
                      Y2="{Binding Elbow.Y, Mode=TwoWay}">
                </Line>
                <Line StrokeThickness="5" Stroke="DarkSlateBlue"
                      X1="{Binding Elbow.X, Mode=TwoWay}"
                      Y1="{Binding Elbow.Y, Mode=TwoWay}"
                      X2="{Binding Palm.X, Mode=TwoWay}"
                      Y2="{Binding Palm.Y, Mode=TwoWay}">
                </Line>
            </Canvas>
        </Border>
    </Grid>
</Window>
